/* Function Test - Compact
   Tests: int/float/string returns, nesting, recursion
*/

#pragma appname "Function Test"
#pragma "decimals" 3
#pragma "console" "on"
#pragma "consolesize"  "760x690"
#pragma "optimizecode" "on"
#pragma "ListASM" "on"
#pragma "version"

// Integer function
func add(a, b) {
    return a + b;
}

// Float function
func divide.f(x.f, y.f) {
    return x / y;
}

// String function
func greet.s(name.s) {
    return "Hi " + name.s;
}

// Nested call
func addSquares(a, b) {
    return a * a + b * b;
}

// Simple recursion
func factorial(n) {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

// TESTS
print("=== Integer Test ===\n");
r1 = add(10, 5);
print("add(10,5) = ", r1, "\n");

print("\n=== Float Test ===\n");
r2.f = divide(100.0, 4.0);
print("divide(100,4) = ", r2, "\n");

print("\n=== String Test ===\n");
s.s = greet("Bob");
print(s, "\n");

print("\n=== Nested Test ===\n");
r3 = addSquares(3, 4);
print("3*3 + 4*4 = ", r3, "\n");

print("\n=== Recursion Test ===\n");
r4 = factorial(5);
print("factorial(5) = ", r4, "\n");

print("\n=== Done ===\n");
